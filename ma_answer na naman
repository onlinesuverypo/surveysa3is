function typeWriter() {
      if (i < text.length) {
        document.getElementById("typing").innerHTML += text.charAt(i);
        i++;
        setTimeout(typeWriter, 100); // speed of typing (100ms per letter)
      }
    }

    typeWriter();
  </script>
